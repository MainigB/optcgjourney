{
  "expo": {
    "name": "OPTCG Journey",
    "slug": "optcg-tracker",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/op_tcg_icon_1024_ios.png",
    "scheme": "optcgtracker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ginithekid.optcgtracker",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.ginithekid.optcgtracker",
      "versionCode": 7,
      "playStoreUrl": "https://github.com/seu-usuario/optcgjourney/blob/main/docs/PRIVACY.md"
    },
    "privacy": "public",
    "description": "Acompanhe seus torneios e estat√≠sticas de partidas do OPTCG",
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon_512.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/op_tcg_icon_1024_ios.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": { 
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "c221e52b-50cb-49ff-bddb-49c984c453ff"
      }
    }
  }
}
